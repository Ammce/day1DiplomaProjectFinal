<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
<link rel="stylesheet" href="/css/custom.css">

<title>Buy Tonight</title>
</head>
<body>
 
 <% include partials/navbar.ejs %>
    
    <div class="container">
    
        <div class="row">
        
            <div class="col-xs-8 offset-xs-2">
                <h1>Specify products you want to search!</h1>
                <form action="/products/specify" method="get">
                   
                     <div class="form-check" style="border: 1px dotted black; padding: 5px;" >
                    <h4>Category</h4>
                        <label class="form-check-label">
                            <input name="category" class="form-check-input" type="checkbox" value="SmartPhones"> SmartPhones
                        </label>
                        <label class="form-check-label">
                            <input name="category" class="form-check-input" type="checkbox" value="Food"> Food
                        </label>
                         <label class="form-check-label">
                            <input name="category" class="form-check-input" type="checkbox" value="Monitors"> Monitors
                        </label>
                    
                    </div>
                    
                    <div class="form-check" style="border: 1px dotted black; padding: 5px;" >
                    <h4>Price</h4>
                        <div class="form-group">
                        <label for="price">Price of product:</label>
                        <input type="text" class="form-control" name="price">
                        </div>
    
                    
                    </div>
                    
                    <button type="submit" class="btn btn-success">Update Search</button>
                
                </form>
                <h1> Search Engine bellow</h1>
                
                <form action="/searchtext" method="get">
                    <div class="input-group stylish-input-group">
                    <input type="text" class="form-control"  placeholder="Search" name="searchterm">
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search">Search</span>
                        </button>  
                    </span>
                </div>
                </form>
                
                
                
            </div>
        
        
        </div>
    
    
    </div>
    
    <% if(user) {%>
        <% if(user.local.isAdmin) {%>  
              <div class="container">
        <div class="row">
            <div class="col-lg-12">   
                <h1>Here are the products you have just addedS</h1>
              </div>          
                <% items.forEach(function(item){ %>   
                    <div class="col-xs-12 col-md-3">
                        <div class="card">
                            <img class="card-img-top product-pics" src="<%= item.image %>" alt="Card image cap">
                        <div class="card-block">
                            <h4 class="card-title"><%= item.name %> </h4>
                            <p class="card-text">Description: <%= item.description %></p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Price: <%= item.price %></li>
                            <li class="list-group-item">Category: <%= item.category %></li>
                        </ul>
                        <div class="card-block">
                            <a href="/buy-product/<%= item._id %>" class="btn btn-success">Buy item</a>
                            <a href="/edit-product/<%= item._id %>" class="btn btn-primary">Edit Item</a>
                            
                            <a href="/delete-product/<%= item._id %>?_method=DELETE" class="btn btn-danger">Delete item</a>
                            
                        </div>
                        
                        </div>
                    </div>
                <% }) %>   

        </div>
    </div>  
       <% } else { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">   
                <h1>Here are the products you have just addedS</h1>
              </div>          
                <% items.forEach(function(item){ %>   
                    <div class="col-xs-12 col-md-3">
                        <div class="card">
                            <img class="card-img-top product-pics" src="<%= item.image %>" alt="Card image cap">
                        <div class="card-block">
                            <h4 class="card-title"><%= item.name %> </h4>
                            <p class="card-text">Description: <%= item.description %></p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Price: <%= item.price %></li>
                            <li class="list-group-item">Category: <%= item.category %></li>
                        </ul>
                        <div class="card-block">
                            <a href="/buy-product/<%= item._id %>" class="btn btn-success">Buy item</a>
                            
                        </div>
                        
                        </div>
                    </div>
                <% }) %>   

        </div>
    </div>  
            
        
          <% } %>
    <% } else { %>
    
        
    
    <% } %>

 <% include partials/footer.ejs %>     

<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
<script src="/js/custom.js"></script>

</body>

</html>