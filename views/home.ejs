        <% /* FEATURED ITEMS  */ %>
    
           
    
                
    
           
        <section>
            <div class="container">
                <div class="row services">     
                    <div class="col-md-12  featured-items">
                
                        <h2> Featured Items Today!</h2>
                    
                        <div class="row">
                    
                         <% featured.forEach(function(item){ %>
                        <div class="product-card-col col-sm-12 col-md-3">
                    <a href="/view-product/<%= item._id %>">
                   <div class="product-card">
    
                        <img src="<%= item.image %>" class="img-fluid rounded" style="border-bottom: 2px solid #ddd;">
                        <div class="product-card-infos">
                            <h5><%= item.name %> </h5>
                            <h2>$<%= item.price %> </h2>
                                <% if(item.price > 500){ %>
                            <span class="product-card-price">
                                Expensive item
                            </span>
                                <% } %>
                            <h5><%= item.category %></h5>
                       </div>
                    </div>
                    </a>
                    </div>
                     <% }); %>
                    
                        </div>          
                    </div>    
                </div>
            </div>
          </section>  
            
    
